/*
Hello!
We see you want to look at the code. This file is required for developing Chrome extensions.
The manifest includes the icon, description, name, permissions, and more.
*/
{
	"name": "Courses+",
	"version": "3.0",
	"manifest_version": 2,
	"description": "An extension that makes Dalton Courses look nicer, adds some features, and fixes some issues.",
	"icons": {
		"128": "images/icon128.png"
	},
	"background": {
		"page": "etc/bg.chrome.html",
		"persistent": true /* As of Chrome 38, webrequest doesn't support event pages, so it's a background page for now */
	},
	"content_scripts": [
		{
			"matches": [
				"https://courses2015.dalton.org/*"
			],
			"css": [
				"css/inject.css"
			],
			"js": [
				"js/cpal.js",
				"js/cpal.chrome.js",
				"js/jquery.js",
				"js/bootstrap.js",
				"js/components.js",
				"js/inject.js",
				"js/coursesLib.js"
			],
			"run_at": "document_start"
		}
	],
	"options_page": "etc/options.html",
	"permissions": [
		"*://courses2015.dalton.org/",
		"*://coursesplus.tk/",
		"*://*.coursesplus.tk/",
		"storage",
		"webRequest",
		"webRequestBlocking"
	],
	"optional_permissions": [
		"*://*/"
	],
	"web_accessible_resources": [
		"images/*.png",
		"images/logos/*.png",
		"css/*.css",
		"fonts/*.eot",
		"fonts/*.svg",
		"fonts/*.ttf",
		"fonts/*.woff",
		"js/*.js",
		"chosen/*.css",
		"chosen/*.png",
		"chosen/*.js",
		"etc/*.html"
	],
	"externally_connectable": {
		"matches": [
			"*://courses2015.dalton.org/*"
		]
	}
}